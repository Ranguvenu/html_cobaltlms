<ul class="course_extended_menu_list">
{{# action}}
        {{# assignusers}}
            <li>
                <div class="courseedit course_extended_menu_itemcontainer">
                    <a title="{{# str}} programusers, local_program {{/ str}}" class="course_extended_menu_itemlink" href="{{ cfg.wwwroot }}/local/program/users.php?bcid={{programid}}"><i class="icon fa fa-user pguser_icon" aria-hidden="true"></i></a>
                </div>
            </li>
        {{/ assignusers}}
        {{# edit}}
            <li>
                <div class="coursebackup course_extended_menu_itemcontainer">
                    <a title="{{# str}} user_enrollments, local_program {{/ str}}" class="course_extended_menu_itemlink" href="javascript:void(0)" title = "{{# str}} edit {{/str}}" onclick="(function(e){ require('local_program/ajaxforms').init({contextid:1, component:'local_program', callback:'program_form', form_status:0, plugintype: 'local', pluginname: 'program', id: {{ programid }} }) })(event)"><i class="icon fa fa-pencil penciltag_icon fa-fw" aria-hidden="true"  title = "{{# str}} edit {{/str}}"></i>
                    </a>
                </div>
            </li>
        {{/ edit}}
        {{# cancreatelevel }}
            <li>
                <div class="pull-right">
                    <a title="{{#str}}addlevel, local_program{{/str}}" class="course_extended_menu_itemlink" href="javascript:void(0)" onclick="(function(e){ require('local_program/ajaxforms').init({contextid:1, component:'local_program', callback:'program_managelevel_form', form_status:0, plugintype: 'local', pluginname: 'program_addlevel', id: 0, programid:{{programid}}, newsemadd:0  }) })(event)">
                        <i class="icon fa fa-tags fa-fw calenderbook_icon" aria-hidden="true" title="{{#str}}addlevel, local_program{{/str}}"></i>
                    </a>
                </div>
            </li>
        {{/ cancreatelevel }}
        {{{unenrolbutton}}}
{{/ action}}
        {{{ challenge_element }}}
        {{# certificate_exists }}
            {{# certificate_download }}
                <li>
                    <a class="course_extended_menu_itemlink" title="{{#str}} download_certificate, local_courses {{/ str}}" class="course_extended_menu_itemlink" href="{{ config.wwwroot}}/admin/tool/certificate/view.php?code={{certificateid}}"><i class="icon fa fa-download" aria-hidden="true"></i>
                    </a>
                </li>
            {{/ certificate_download }}
            {{^ certificate_download }}
                    <li>
                        <a class="course_extended_menu_itemlink" title="{{# str}} unableto_download_msg, local_program, Learning path {{/str}}" class="course_extended_menu_itemlink" href="javascript: void(0)"><i class="icon fa fa-download" aria-hidden="true"></i>
                        </a>
                    </li>
            {{/ certificate_download }}
            {{/ certificate_exists }}
    </ul>
{{# program}}
<div class="container-fluid mt-4">
            <div class="row program_content_view">
                <div class="col-lg-3">
                    <div class="program_contentimg" style="background-image: url('{{{ imageurl }}}');">
                        <!-- {{{ imageurl }}} -->
                    </div>
                </div>
                 <div class="col-lg-8">
                    <span><b><u>{{#str}}description, local_program{{/str}}</u> :</b></span>
                    <div title="{{{ wholedescription }}}">
                    {{# isdescription}}    
                        <p class="text-muted descriptionstring">{{{ description }}}</p>
                    {{/ isdescription}}
                    {{^ isdescription }}
                        <p class="alert alert-info text-center">{{#str}}nocoursedesc, local_courses{{/str}}</p>
                    {{/ isdescription }}
                    </div>
                    <div class="row ">
                        <div class="col-lg-6 col-md-6 col-sm-12">
                            <p class="mb-1 w-full d-flex">
                                <span class="bcrightlable_name text-muted d-flex justify-content-between">{{# str}} batch, local_program {{/str}}
                                    <span class="mr-2">:</span>
                                </span>
                                <span class="bc_value font-weight-bold" title="{{ batchname }}">{{ batchname }}</span>
                            </p>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12">
                            <p class="mb-1 w-full d-flex">
                                <span class="bcrightlable_name text-muted d-flex justify-content-between">{{# str}} curriculumid, local_program {{/str}}
                                    <span class="mr-2">:</span>
                                </span>
                                <span class="bc_value font-weight-bold"><a class="course_extended_menu_itemlink" href="javascript:void(0)" title="{{ curriculumname }}" onclick="(function(e){ require('local_program/ajaxforms').init({contextid:1, component:'local_program', callback:'program_curriculum_form', plugintype: 'local', pluginname: 'program', levelid: {{levelid}}, bcid: {{ programid }}, ccid: {{ curriculumid }} }) })(event)">{{ curriculumname }}</a></span>
                            </p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-12">
                            <p class="mb-1 w-full d-flex">
                                <span class="bcrightlable_name text-muted d-flex justify-content-between">{{# str}} duration, local_program {{/str}}
                                    <span class="mr-2">:</span>
                                </span>
                                <span class="bc_value font-weight-bold" title="{{ duration }}">{{ duration }} <span class="bc_value font-weight-bold" title="{{ duration_format }}">{{ duration_format }}</span> </span> 
                            </p>
                        </div>
                        {{#userview}}
                        <div class="col-lg-6 col-md-6 col-sm-12">
                            <p class="mb-1 w-full d-flex">
                                <span class="bcrightlable_name text-muted d-flex justify-content-between">{{# str}} certificate, local_program {{/str}}
                                    <span class="mr-2">:</span>
                                </span>
                                <span class="bc_value font-weight-bold" title="{{ certificatename }}">{{{certificatename}}}</span>
                                <span class="bc_value font-weight-bold ml-2" title="{{ certificate }}">{{{downloadurl}}}</span>
                            </p>
                        </div>
                        {{/userview}}
                        {{^userview}}
                        <div class="col-lg-6 col-md-6 col-sm-12">
                            <p class="mb-1 w-full d-flex">
                                <span class="bcrightlable_name text-muted d-flex justify-content-between">{{# str}} enrolled, local_program {{/str}}
                                    <span class="mr-2">:</span>
                                </span>
                                <span class="bc_value font-weight-bold">{{ enrolled_users }}</span>
                            </p>
                        </div>
                        {{/userview}}
                    </div>
                    <!-- program startdate and enddate Starts -->
                    <div class="row ">
                        <div class="col-lg-6 col-md-6 col-sm-12">
                            <p class="mb-1 w-full d-flex">
                                <span class="bcrightlable_name text-muted d-flex justify-content-between ">{{# str}} startdate, local_program {{/str}}
                                    <span class="mr-2">:</span>
                                </span>
                                <span class="bc_value font-weight-bold" title="{{ p_startdate }}">{{ p_startdate }}</span>
                            </p>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 d-flex">
                            <p class="mb-1 w-full d-flex">
                                <span class="bcrightlable_name text-muted d-flex justify-content-between">{{# str}} enddate, local_program {{/str}}
                                    <span class="mr-2">:</span>
                                </span>
                                <span class="bc_value font-weight-bold" title="{{ program_enddate }}">{{ program_enddate }}</span>
                            </p>
                        </div>
                    </div>
                    <!-- program startdate and enddate Ends -->


                 </div>
            </div>
    </div>
<div class="programview_container">

    <div class="col-lg-12 col-md-12 col-sm-12 col-12 pull-left classview_topcontent pl-0 pr-0">
        <div class="program_view_content w-100 pull-left mb-10">
           
                <!-- <p class="banner"><img src="{{ download_url }}">
                </p> -->

                
                
            <!-- </div> -->
        </div>
    </div>
    <div class="col-lg-3 col-md-12 col-sm-12 col-12 pull-right pl-0 pr-0">
    </div>
    <div class="program_view_content w-100 pull-left">
        {{{ programlevels }}}
    </div>
</div>
{{/ program}}
