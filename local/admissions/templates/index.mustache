<div class="m-2 float-right admisssion_card">
    <a href="{{configwwwroot}}/local/admissions/programs.php">
        <span class="cardlist_icon"></span>
        <span class="ml-2 card_content">{{#str}}card, local_admissions{{/str}}</span>
    </a>
</div>
<br><br>
<div id="admissions_container">
    {{^ programs }}
        <div class="alert alert-info alert-block fade in text-center" role="alert">
            {{#str}}nodetailsavail, local_admissions{{/str}}
        </div>
    {{/ programs }}
    {{# programs }}
    <div class="mt-3 p-3 pl-5 border admission_course">
        <div class="row active course_container" data-id="{{id}}">
            <div class="col-md-2 courseimg_container"style="background-image:url('{{{ imageurl }}}') ;">                
            </div>
            {{! first column }}
            <div class="col-md-4 course_program">
                <div class="row">
                    <div class="col-md-12 program_head">
                        <div class="program_content mt-2">
                            <!-- <span class="lable_align">{{#str}}programname, local_admissions{{/str}} :</span> -->
                            <span class="info_head h6">{{ programname }}</span>
                        </div>
                        <div class="program_content mt-2">
                            <span class="lable_align">{{#str}}startdate, local_admissions{{/str}} :</span>
                            <strong class="info_value">{{ startdate }}</strong>
                        </div>
                        <div class="program_content mt-2">
                            <span class="lable_align">{{#str}}enddate, local_admissions{{/ str}} :
                            </span>
                            <strong class="info_value">{{ enddate }}</strong>
                            
                        </div>
                        <div class="program_content mt-2">
                            <span class="lable_align">{{#str}}certificate, local_admissions{{/str}} :</span>
                            <strong class="info_value">{{ certificate }}</strong>
                        </div>
                    </div>
                </div>
            </div>

            {{! second column }}
            <div class="col-md-3">
                <div class="row">
                    <div class="col-md-12">
                        <div class="program_content mt-2">
                           <span class="lable_align">{{#str}}noofsems, local_admissions{{/str}} :</span>
                            <strong class="info_value">{{ nsems }}</strong> 
                        </div>
                        <div class="program_content mt-2">
                            <span class="lable_align">{{#str}}noofcourses, local_admissions{{/ str}} :
                            </span>
                            <strong class="info_value">{{ ncourses }}</strong>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 ">
                <div class="program_content mt-2">
                	<span class="text-muted">{{#str}}admissionends, local_admissions{{/str}} : </span>
                    <strong class="info_value">{{admissionenddate}}</strong>
                </div>
                    <div class="program_content mt-2 d-flex justify-content-center">
                    	<a href="{{configwwwroot}}/local/admissions/personal_information.php?programid={{id}}&format=list"><button class="btn btn-primary" title="{{#str}}applynow, local_admissions{{/str}}">{{#str}}applynow, local_admissions{{/str}}</button></a>
                    </div>
            </div>
        </div>
    </div>

    <div class="tab"></div>
        <!-- <label class="tab" for="tab"></label>   -->
    <!-- trigger to collapse -->
    <div class="border border-top-0 text-center shadow admission_bottom p-3" data-toggle="collapse" href="#sylabuscollapse{{id}}">
        <a href="javascript:void(0)" class="sylabus expand-one{{id}} text-decoration-none">{{#str}}syllabus, local_admissions{{/str}}
            <span class="dropdown_icon">
                <i class="fa fa-angle-down"></i>
            </span>
        </a>
    </div>
    <!-- hidden data to display -->
    <div class="content-one{{id}}" style="display: none;">
        {{> local_admissions/semestertabs }}
    </div>

    {{#js}}
        $('.expand-one'+{{id}}).click(function(){
            $('.content-one'+{{id}}).slideToggle('medium');
            $('#{{id}}current-tab').trigger('click');
        });
    {{/js}}

    {{/ programs }}
</div>
