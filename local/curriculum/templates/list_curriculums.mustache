{{#response}}
<table id ="viewcurriculum_details" class="generaltable">
    <thead>
        <tr>
            <th>{{#str}}curriculum_name, local_curriculum{{/str}}</th>
            <th>{{college}}</th>
            {{#canshowactions}}
                <th>{{#str}}action, local_curriculum{{/str}}</th>
            {{/canshowactions}}
        </tr>
    </thead>
    <tbody>
        {{#records}}
            <tr>
                <td>
                    <a href="{{{url}}}/local/curriculum/view.php?ccid={{id}}&type=1" alt="{{#str}}view{{/str}}" title="{{curriculumname}}" target="_blank">
                        {{curriculumname}}
                    </a>
                </td>
                <td>{{university}}</td>
                {{#canshowactions}}
                    <td>{{{action}}}</td>
                {{/canshowactions}}
            </tr>
        {{/records}}
    </tbody>
</table>
{{/response}}
