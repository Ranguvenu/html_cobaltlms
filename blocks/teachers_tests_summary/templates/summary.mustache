{{!
    @template block_teachers_tests_summary/summary
    Example context (json):
    {
    }
}}

{{#response}}
<br>
    <table class="generaltable" id="test_summary">
    	<thead>
    	<tr>
    	<th>{{#str}} quizname, block_teachers_tests_summary {{/str}}</th>
    	<th>{{#str}} coursename, block_teachers_tests_summary {{/str}}</th>
    	<th>{{#str}} inprogress, block_teachers_tests_summary {{/str}}</th>
    	<th>{{#str}} completed, block_teachers_tests_summary {{/str}}</th>
    	<th>{{#str}} notyetattempted, block_teachers_tests_summary {{/str}}</th>
    	<th>{{#str}} passgrade, block_teachers_tests_summary {{/str}}</th>
    	<th>{{#str}} maxgrade, block_teachers_tests_summary {{/str}}</th>
    	<th>{{#str}} avggradeofstudent, block_teachers_tests_summary {{/str}}</th>
    	</tr>
    	</thead>
    	<tbody>
            {{#records}}
                {{#hascourses}}
                	<tr>
                        <td>
                            <a href="{{cfgwwwroot}}/mod/quiz/view.php?id={{quizmoduleid}}" target="_blank">
                                {{quizname}}
                            </a>
                        </td>
                        <td>{{coursename}}</td>
                        <td>
                            <a class="inprogressquizpopup" href="javascript:void(0)" data-id="{{id}}" data-action="popupmodal{{id}}"><b>{{ inprogressstudentcount }}</b>
                            </a>
                        </td>
        	            <td>
        	            	<a class="quizpopup" href="javascript:void(0)" data-id="{{id}}" data-action="popupmodal{{id}}"><b>{{ completedstudentcount }}</b>
        	            	</a>
        	            </td>
                        <td>
                            <a class="notattemptedquizpopup" href="javascript:void(0)" data-id="{{id}}" data-action="popupmodal{{id}}"><b>{{ totalstdcounts }}</b>
                            </a>
                        </td>
                        <td>{{minpassgrade}}</td>
                        <td>{{maxgrade}}</td>
                        <td>{{avggrade}}</td>
                    </tr>
                {{/hascourses}}
            {{/records}}
        </tbody>
    </table>
{{/response}}