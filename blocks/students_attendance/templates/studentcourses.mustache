{{!
    @template block_students_attendance/studentcourses
    Example context (json):
    {
    }
}}
{{#response}}
    <table class="generaltable" id="courses_table_student">
        <thead>
            <tr>
                <th class="text-left">{{#str}}subjects, block_students_attendance{{/str}}</th>
                <th>{{#str}}totalclasses, block_students_attendance{{/str}}</th>
                <th>{{#str}}presents, block_students_attendance{{/str}}</th>
                <th>{{#str}}absents, block_students_attendance{{/str}}</th>
                <th>{{#str}}percentage, block_students_attendance{{/str}}</th>
            </tr>
        </thead>
        <tbody>
            {{#records}}
                {{#hascourses}}
                    <tr>
                        <td class="text-left" title="{{fullnames}}"><span><a></span><span><b>{{fullname}}</b></a></span></td>
                        <td>{{totalattdence}}</td>
                        <td>{{userpresented}}</td>
                        <td>{{ userabsented }}</td>
                        <td>{{pecentage}}%</td>
                    </tr>
                {{/hascourses}}
            {{/records}}
        </tbody>
    </table>
{{/response}}
