<div class="mt-3">
{{# response }}
    <table id="grade_assignments" class="generaltable">
        <thead>
            <tr>
                <th>{{#str}}username, block_assignments{{/str}}</th>
                <th>{{#str}}assgname, block_assignments{{/str}}</th>
                <th>{{#str}}cname, block_assignments{{/str}}</th>
                <th>{{#str}}datesubmitted, block_assignments{{/str}}</th>
                <th>{{#str}}delay, block_assignments{{/str}}</th>
                <th>{{#str}}grade, block_assignments{{/str}}</th>
            </tr>
        </thead>
        <tbody>
            {{# records }}
                {{# submissions }}
                <tr>
                    <td>{{username}}</td>
                    <td><a href="{{assignmturl}}" target="_blank">{{assignmentname}}</a></td>
                    <td><a href="{{courseurl}}" target="_blank">{{coursename}}</a></td>
                    <td>{{submissiondate}}</td>
                    <td>{{delay}}</td>
                    <td><a href="{{gradeurl}}" class="btn" target="_blank">{{#str}}grade, block_assignments{{/str}}</a></td>
                </tr>
                {{/ submissions }}
            {{/ records }}
        </tbody>
    </table>
{{/ response }}
</div>
