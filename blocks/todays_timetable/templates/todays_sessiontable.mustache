{{!
    @template mod_quiz/random_challenge_form_preview

    A preview section for the list of challenges that match the random
    challenge criteria in the random challenge form.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * title A cleaned string (use clean_text()) to display.
    * body HTML content for the boday

    Example context (json):
    {}
}}
{{#response}}
<div class=" pull-right mb-1">
                <ul class=" w-full pull-left">
                    <li>
                        <span>
                            <span >Total: </span>
                            <span >{{{totalcount}}}</span>
                        </span>
                    </li>
                </ul>
            </div>
<table class="generaltable" id="courses_table_student">
    <thead>
        <tr>
            <th>{{#str}}subject, block_todays_timetable{{/str}}</th>
            <th>{{#str}}timings, block_todays_timetable{{/str}}</th>
            <th>{{#str}}attendance, block_todays_timetable{{/str}}</th>
        </tr>
     </thead>
    <tbody>
           {{#records}}
                {{#hascourses}}
                    <tr>
                       <td>{{fullname}}</td>
                       <td>{{timings}}</td>
                       <td><a href="{{ cfg_url }}/local/attendance/take.php?id={{attenid}}&sessionid={{sessid}}&grouptype=0&viewmode=2&semid={{levelid}}&batch_group=0" target="_blank">{{#str}}takeattendance, block_todays_timetable{{/str}}</a></td>
                     </tr>
                        </tr>
                {{/hascourses}}
            {{/records}}
     </tbody>
 </table>
 {{/response}}

